<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalBudgetGushin.AddTransactionPage"
             Title="Добавление траты">
    <VerticalStackLayout
        Padding="30,20"
        Spacing="20"
        VerticalOptions="Center">
        <Entry x:Name="TitleEntry" 
               Placeholder="Заголовок траты"/>
        <Editor x:Name="DescriptionEntry"
                MinimumHeightRequest="200"
                Placeholder="Описание траты"/>
        <Editor x:Name="AmountEntry"
                Keyboard="Numeric"
                Placeholder="Количество портаченных денег"/>
        <Button Clicked="AddTransaction" Text="Добавить"/>

    </VerticalStackLayout>
</ContentPage>